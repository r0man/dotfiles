#!/usr/bin/env bash

EXTERNAL="HDMI-0"
INTERNAL="DP-2"

if xrandr | grep "$EXTERNAL disconnected"; then
    echo "External monitor not connected."
    xrandr --output "$INTERNAL" --primary --auto --output "$EXTERNAL" --off
else
    echo "External monitor connected."
    xrandr --output "$INTERNAL" --mode 3840x2160 --output "$EXTERNAL" --right-of "$INTERNAL" --mode 2560x1440 --scale 1.5x1.5 --primary
fi

