#!/usr/bin/env bash

EXTERNAL="DP-1"
INTERNAL="eDP-1"

MONITORS=`xrandr | grep connected | grep -v disconnected | grep -v eDP | wc -l`

if [ "$MONITORS" == 1 ]; then
    echo "External monitor connected."
    xrandr --output $EXTERNAL --right-of $INTERNAL --auto
fi

# xrandr --output HDMI-0 --right-of DP-2 --auto --scale 1.5x1.5
