#!/usr/bin/env bash

EXTERNAL="HDMI-0"
INTERNAL="DP-2"

if xrandr | grep "$EXTERNAL disconnected"; then
    echo "External monitor not connected."
    xrandr --output "$INTERNAL" --primary --auto --output "$EXTERNAL" --off
    sleep 1
else
    echo "External monitor connected."
    xrandr --output HDMI-0 --mode 2560x1440 --pos 0x0 --rotate normal --scale 1.5x1.5 --output DP-2 --primary --mode 3840x2160 --pos 0x2160 --rotate normal --output DP-1 --off --output DP-0 --off
    sleep 1
fi
