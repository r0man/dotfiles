#!/usr/bin/env bash

EXTERNAL="HDMI-0"
INTERNAL="eDP-1-1"

if xrandr | grep "$EXTERNAL disconnected"; then
    echo "External monitor not connected."
    xrandr --output "$INTERNAL" --primary --auto --output "$EXTERNAL" --off
    sleep 1
else
    echo "External monitor connected."
    xrandr --output DP-0 --off --output DP-1 --off --output HDMI-0 --primary --mode 3840x2160 --pos 0x0 --rotate normal --output eDP-1-1 --mode 3840x2160 --pos 0x2160 --rotate normal
    sleep 1
fi
