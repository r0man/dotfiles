#
# ~/.bash_aliases
#

# cd
alias ..='cd ..'
alias ...='cd .. && cd..'

# ls
alias ls='ls --color=auto'
alias ll='ls -lh'
alias la='ls -lha'

# Bundler aliases
alias cap='bundle exec cap'
alias guard='bundle exec guard'
alias rails='bundle exec rails'
alias rake='bundle exec rake'
alias spec='bundle exec spec'
